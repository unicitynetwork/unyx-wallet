<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:padding="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recovery Phrase"
            android:textColor="#80FFFFFF"
            android:textSize="28sp"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Контент: предупреждение + список + кнопка -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:paddingVertical="15dp"
            android:background="@drawable/bg_warning_pill">
            <TextView
                android:id="@+id/tvWarnSmallTitle"
                android:text="Do not share your Recovery Phrase!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:textColor="#D93E24"
                android:textAlignment="center"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/tvWarnSmall"
                android:text="If someone has you Recovery Phrase they will have full control of your wallet."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingHorizontal="15dp"
                android:textColor="#9A2C1A"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"/>
        </LinearLayout>

        <!-- recycler растягивается, заполняя всё оставшееся место -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"/>

        <!-- Copy сразу после списка -->
        <Button
            android:id="@+id/btnCopy"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Copy"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="#262626"
            android:background="@drawable/btn_green_rounded"/>
    </LinearLayout>

    <!-- Оверлей-предупреждение -->
    <ScrollView
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#5C1C1C1C"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="Keep Your Recovery Phrase Secret"
                android:fontFamily="@font/inter_bold"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="70dp"
                android:paddingHorizontal="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Your secret recovery phrase is like a master key to your wallet."
                    android:textColor="#CFCFCF"
                    android:layout_marginBottom="17dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="If someone gets it, they can steal your funds. There’s no way to recover lost funds."
                    android:textColor="#CFCFCF"
                    android:layout_marginBottom="17dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Never share it with anyone - no person, website, or app."
                    android:textColor="#CFCFCF"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <CheckBox
                    android:id="@+id/cbUnderstand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I understand that sharing my recovery phrase could result in permanent loss of funds."
                    android:textColor="#FAF6F6"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter_semibold"
                    android:button="@drawable/cb_circle_selector"
                    android:minHeight="48dp"
                    android:paddingStart="15dp"
                    android:paddingTop="30dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnReveal"
                android:text="Reveal"
                android:enabled="false"
                android:layout_marginTop="60dp"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:fontFamily="@font/inter_medium"
                android:background="@drawable/btn_white_border"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
