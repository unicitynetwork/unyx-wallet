<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:paddingBottom="8dp"
    android:background="@android:color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <!-- Header with title and close button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Asset"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:contentDescription="Close" />
        </RelativeLayout>

        <!-- Select Asset -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Asset:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp" />

        <AutoCompleteTextView
            android:id="@+id/assetSelector"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:hint="Choose asset"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:paddingHorizontal="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#80FFFFFF" />

        <!-- Available Balance -->
        <TextView
            android:id="@+id/availableBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available balance will be shown when asset is selected"
            android:textSize="14sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Amount Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/amountInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="8dp"
            android:hint="Enter amount"
            android:inputType="numberDecimal"
            android:paddingHorizontal="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#80FFFFFF" />

        <!-- Note/Message (Optional) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note (optional):"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/noteInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:hint="Add a note"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="4"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textColorHint="#80FFFFFF" />

        <!-- Send Button -->
        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
