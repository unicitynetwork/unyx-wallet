<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="35dp"
    android:background="#1D1D1D"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Settings"
            android:textColor="#50FFFFFF"
            android:fontFamily="@font/inter_bold"
            android:textSize="28sp" />
    </FrameLayout>

    <!-- Profile row -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:cardBackgroundColor="#252525"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_alien"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tvNametag"
                android:text="@unicityName"
                android:textColor="#80FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/inter_medium"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Recovery phrase -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rowRecovery"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#252525"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:src="@drawable/ic_lock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:text="Recovery phrase"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Enable PIN -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rowPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#252525"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:src="@drawable/ic_keyboard"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:text="Enable PIN"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Manage Contacts -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rowManageContacts"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#252525"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:src="@drawable/ic_contacts"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:text="Manage contacts"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
