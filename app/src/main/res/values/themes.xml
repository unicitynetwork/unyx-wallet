<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UnicityWallet" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="FullScreenDialog" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DarkFullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Диалог без белого фона -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Убираем белую полосу -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Светлые иконки в статус-баре -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>