<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Button.Unicity" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/elevation_sm</item>
    </style>
</resources>