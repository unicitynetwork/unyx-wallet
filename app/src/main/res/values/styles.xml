<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Button.Unicity" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/elevation_sm</item>
    </style>

    <style name="SeedField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@drawable/bg_nametag_selector</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:inputType">textNoSuggestions|textVisiblePassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_marginVertical">20dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>
</resources>